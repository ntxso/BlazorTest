@inherits LayoutComponentBase
@inject FakeAuthStateProvider AuthStateProvider
<CascadingAuthenticationState>
<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

        <main>
            <div class="top-row px-4 bg-primary text-white">
                <div class="d-flex justify-content-between w-100">
                    <div>
                        <a href="https://docs.microsoft.com/aspnet/" target="_blank">About</a>
                    </div>
                    <div>
                        <AuthorizeView>
                            <Authorized>
                                <span>Merhaba, @context.User.Identity.Name!</span>
                                <a href="/logout" class="text-white ms-3" @onclick="Logout">Çıkış</a>
                            </Authorized>
                            <NotAuthorized>
                                <a href="/login" class="text-white">Giriş Yap</a>
                            </NotAuthorized>
                        </AuthorizeView>
                    </div>
                </div>
            </div>

            <article class="content px-4">
                @Body
            </article>
        </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>
</CascadingAuthenticationState>
@code {
    private async Task Logout()
    {
        var fakeProvider = (FakeAuthStateProvider)AuthStateProvider;
        await fakeProvider.LogoutAsync();
    }
}